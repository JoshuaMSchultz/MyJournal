<p id="notice"><%= notice %></p>

<h2 id="thought_header">
  <%= @thought.title %>
</h2>

<p id="thought_body">
    <%= @thought.body.html_safe %>
</p>

<%= link_to 'Thoughts', thoughts_path %><br>
<%= link_to 'Edit', edit_thought_path(@thought) %><br> 
<%= link_to 'Delete', @thought, method: :delete, data: { confirm: 'Are you sure?' } %>