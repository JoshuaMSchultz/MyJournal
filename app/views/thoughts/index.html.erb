<h1>Thoughts and Ideas</h1>

<table>
  <thead>
    <tr>
      <th>Ideas</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @thoughts.each do |thought| %>
      <tr>
        <td><%= link_to thought.title, thought %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add Idea', new_thought_path %>
