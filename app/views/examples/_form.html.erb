<%= form_for([@thought, @example]) do |f| %>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_field :body %>
  </div>
  <select name="source_id">
	  <%= @sources.each do |s| %>
	    <option value="<%= s.id %>"><%= s.name %></option>
	  <% end %>
  </select>
  <div class="actions">
	<%= f.submit "Add" %>
  </div>
<% end %>