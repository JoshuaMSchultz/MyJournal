%section.main
  %section#container
    %h1 Edit Your Example
    = simple_form_for([@thought, @example]) do |form| 
      = form.cktext_area :body
      .btn-group{:style => "padding: 10px;"}
        = form.association :source, :label => "Choose a Source", :input_html => {class: 'btn btn-default dropdown-toggle'} 
      %br  
      = form.button :submit, class: "btn btn-default"
  


