%p#notice= notice

%p
  %b Quote:
  = @quote.quote.html_safe
%p
  %b Author:
  = @quote.author
%p
  %b Source:
  = @quote.source.name
.btn-group
  = link_to 'Edit', edit_quote_path(@quote), :class => "btn btn-default"
  = link_to 'Delete', @quote, :class => "btn btn-default", method: :delete, data: {confirm: 'Are you sure?'}
%br
= link_to 'Back', :back, :class => "btn btn-default"
