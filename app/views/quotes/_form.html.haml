= simple_form_for(@quote) do |f|
  = f.error_notification

  .form-inputs
    = f.cktext_area :quote, :class => "form-control", :ckeditor => {:toolbar => 'Basic'}
    = f.input :author
    = f.association :source
    = f.input :tag_list

  .form-actions
    = f.button :submit, 'Done', :class => "btn btn-primary"
